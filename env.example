# Church Equipment Inventory System - Environment Variables
# Copy this file to .env and update with your actual values

# ==========================================
# Database Configuration
# ==========================================
# For Development (SQLite)
DATABASE_URL=sqlite:///church_inventory.db

# For Production (PostgreSQL) - Uncomment and configure
# DATABASE_URL=postgresql://username:password@localhost:5432/church_inventory

# Docker PostgreSQL Configuration
POSTGRES_DB=church_inventory
POSTGRES_USER=church_admin
POSTGRES_PASSWORD=changeme123

# ==========================================
# Flask Configuration
# ==========================================
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True

# Security - CHANGE THIS IN PRODUCTION!
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SESSION_SECRET=please-change-this-secret-key-in-production

# ==========================================
# Application Settings
# ==========================================
# Maximum upload size (in bytes) - Default: 16MB
MAX_CONTENT_LENGTH=16777216

# ==========================================
# Twilio Configuration (Optional - for SMS verification)
# ==========================================
# Sign up at https://www.twilio.com/ to get these credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# Email Configuration (Optional - for email verification)
# ==========================================
# SMTP server settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# ==========================================
# OAuth Configuration (Optional)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ==========================================
# Production Settings
# ==========================================
# Set to False in production
DEBUG=False
FLASK_ENV=production

# Gunicorn workers (typically 2-4 x $(NUM_CORES))
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ==========================================
# Docker-Specific Settings
# ==========================================
PORT=5000
RUN_MIGRATIONS=false

